<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jetpack.lifecycle.LifeCycleTestActivity">

    <Button
        android:id="@+id/addObserver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="实现 Observer" />

    <Button
        android:id="@+id/normalActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="打开 normalActivity"
        app:layout_constraintTop_toBottomOf="@id/addObserver" />

    <Button
        android:id="@+id/dialogActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="打开 dialogActivity"
        app:layout_constraintTop_toBottomOf="@id/normalActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>